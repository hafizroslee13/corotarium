        <!--<Entry x:Name="inputInterest" Placeholder="Enter interest rate per annum (%)" Keyboard="Numeric" Margin="0,30,0,0"/>
        <Entry x:Name="inputPeriod" Placeholder="Enter loan period (months)" Keyboard="Numeric" Margin="0,30,0,0"/>-->

        
    </StackLayout>
    
</ContentPage>